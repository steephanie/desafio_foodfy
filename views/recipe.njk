{% extends "layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/visuals/recipe.css">
    <title>{{recipe.title}}</title>
{% endblock %}

{% block links %}
    <div class="links">
        <div>
            <a href="/about">Sobre</a>
        </div>

        <div class="here" id="recipe">
            <a href="/recipes">Receitas</a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <main class="principal">
        <div class="image-principal">
            <img src="{{recipe.image}}" alt="Imagem do {{recipe.title}}">
        </div>

        <div class="text">
            <div class="title">
                <h1>{{recipe.title}}</h1>
                <p>por
                    {{recipe.author}}</p>
            </div>

            <section class="details">
                <div class="ingredients">
                    <div class="subtitle1">
                        <h1>{{info.subtitle[0]}}</h1>
                        <span class="button1">ESCONDER</span>
                    </div>

                    <div class="data1">
                        {% for item in recipe.ingredients %}
                            <li>{{item}}</li>
                        {% endfor %}
                    </div>

                </div>

                <div class="preparation">
                    <div class="subtitle2">
                        <h1>{{info.subtitle[1]}}</h1>
                        <span class="button2">ESCONDER</span>
                    </div>

                    <div class="data2">
                        {% for item in recipe.preparation %}
                            <li>{{item}}</li>
                        {% endfor %}
                    </div>
                </div>

                <div class="info">
                    <div class="subtitle3">
                        <h1>{{info.subtitle[2]}}</h1>
                        <span class="button3">ESCONDER</span>
                    </div>
                    <div class="data3">
                        <li class="data">{{recipe.information}}</li>
                    </div>
                </div>

            </section>

        </div>
    </main>

    <script src="/scripts/recipe.js"></script>
{% endblock %}