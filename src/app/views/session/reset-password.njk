{% extends "./layout-session.njk" %}

{%block head%}
  <title>Nova senha</title>
{%endblock head%}

{% block content %}
<div class="action"><p>Nova Senha</p></div>
<form action="/users/reset-password" method="POST">
  <div class="fields">
      <input type="hidden" name="token" value="{{token}}">
      <div class="item">
        <div>Email</div>
        <div><input type="text" name="email" value="{{email}}" placeholder="Digite seu email" ></div>
      </div>

      <div class="item">
        <div>Nova senha</div>
        <div><input type="password" name="password" placeholder="Digite sua nova senha" ></div>
      </div>
      <div class="item">
        <div>Repetir senha</div>
        <div><input type="password" name="repeatPassword" placeholder="Repita a nova senha" ></div>
      </div>
  </div>

  <div class="buttons">
    <div>
    </div>
    <div>
      <button type="submit">Nova senha</button>
    </div>
  </div>
</form>
{% endblock content %}