{% extends "./layout-session.njk" %}

{% block head %}
  <title>Esqueci a senha</title>
{% endblock head %}

{% block content %}
  <div class="action"><p>Esqueceu a senha?</p></div>
<form action="/users/forgot-password" method="POST">
  <div class="fields">
      <div class="item">
        <div>Email</div>
        <div><input type="text" name="email" placeholder="Digite seu email para recuperar a senha" ></div>
      </div>
  </div>

  <div class="buttons">
    <div></div>
    <div>
      <button type="submit">Recuperar</button>
    </div>
  </div>
</form>
{% endblock content %}
