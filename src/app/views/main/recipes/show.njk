{% extends "../../layout-main.njk" %}

{% block head %}

<title>{{recipe.title}} - Foodfy</title>

{% endblock head %}

{% block content %}

<div class="recipe">
    <div class="head">
        <span><h1>Receita: {{recipe.title}}</h1></span>
        <a href="/admin/recipes/{{recipe.id}}/edit" class="button"><span>Editar receita</span></a>

    </div>
    <img
        id="main-image"
        src= "{{files[0].file_path}}"
        alt="Imagem de {{files[0].file_name}}"
    />
    <div class="files-wrapper">
      {% for file in files %}
      <span >
        <img {% if file.file_id == files[0].file_id%}class="selected"{% endif %}
              onClick="changingRecipeImages.toChange(event)"
              src="{{file.file_path}}"
              alt="{{file.file_name}}">
      </span>

      {% endfor %}
    </div>
    <div class="title-chef">
      <h1>{{recipe.title}}</h1>
      <h3>por {{recipe.chef}}</h3>
    </div>
    <div class="step">
        <section class="info-content">
            <h2>Ingredientes</h2>
            <p onClick="controlContentRecipe.showOrHide(event)">Esconder</p>
        </section>
        <div class="preparation">
            <ul>

                {% for ingredient in recipe.ingredients %}

                    <li>{{ingredient}}</li>

                {% endfor %}

            </ul>
        </div>
    </div>

    <div class="step">
        <section class="info-content">
            <h2>Modo de preparo</h2>
            <p onClick="controlContentRecipe.showOrHide(event)">Esconder</p>
        </section>

        <div class="preparation">
          <ul>

            {% for preparation in recipe.preparation %}

                <li>{{preparation}}</li>

            {% endfor %}
          </ul>
        </div>
    </div>

    <div class="step">
        <section class="info-content">
            <h2>Informações adicionais</h2>
            <p class="hide" onClick="controlContentRecipe.showOrHide(event)">Esconder</p>
        </section>
        <div class="preparation">

            <p>{{recipe.information}}</p>

        </div>
    </div>
</div>

{% endblock content %}
