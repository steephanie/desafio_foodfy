{% extends "../layout-admin.njk" %}

{% block head %}

<title>Admin - Editando</title>

{% endblock head %}

{% block content %}

<div class="recipe">

    <div class="form">
        <div class="delete"
        data-has_recipes = {{chef.qt_recipes}}>
            <form method="POST" action="/admin/chefs?_method=DELETE">
                <input type="hidden" name="id" value="{{chef.id}}">
                <input type="hidden" name="file_id" value="{{chef.file_id}}">
                <input type="hidden" name="qt_recipes" value="{{chef.qt_recipes}}">
                <button class="button-delete" type="submit" onClick="confirmationOfButtons.verifyingBeforeDeleteChef(event)"><span>Deletar</span></a>
            </form>
        </div>
        <form method="POST" action="/admin/chefs?_method=PUT" enctype="multipart/form-data">
            <div class="head">
                <div>

                <span><h1>Editando Chef</h1></span>
                </div>
                <div class="button-wrapper">
                    <button class="button" type="submit" onClick="confirmationOfButtons.verifyingBeforeSavingChef(event)"><span>Salvar Chef</span></a>
                </div>
            </div>
            {%include "./fields.njk"%}
            <input type="hidden" name="id" value="{{chef.id}}">
        </form>
    </div>
</div>


{% endblock content %}

